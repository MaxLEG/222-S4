{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div class="container container-main">
    <h1>üìù Gestion des Articles</h1>

    <div class="search-container mb-4">
        <form method="get" action="{{ path('article_index') }}" class="d-flex gap-2">
            <input type="text" name="q" class="form-control" placeholder="Rechercher par titre ou contenu..." value="{{ searchTerm|default('') }}">
            <button class="btn btn-primary" type="submit">üîç Rechercher</button>
            {% if searchTerm is defined and searchTerm is not empty %}
                <a href="{{ path('article_index') }}" class="btn btn-secondary">‚ùå</a>
            {% endif %}
        </form>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Category</th>
                <th>Content</th>
                <th>Publi√©</th>              {# nouvelle colonne #}
                <th>Actions</th>
                <th>Actions publication</th> {# nouvelle colonne #}
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ article.title }}</td>
                <td>
                    {% if article.category.name is defined %}
                        {{ article.category.name }}
                    {% endif %}
                </td>
                <td>{{ article.content }}</td>

                {# ETAT PUBLIE / BROUILLON #}
                <td>
                    {% if article.published %}
                        <span class="badge bg-success">Publi√©</span>
                    {% else %}
                        <span class="badge bg-secondary">Brouillon</span>
                    {% endif %}
                </td>

                {# ACTIONS EXISTANTES #}
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-sm btn-primary">üëÅÔ∏è Voir</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-sm btn-warning">‚úèÔ∏è Modifier</a>
                </td>

                {# BOUTON PUBLIER / DEPUBLIER #}
                <td>
                    <form method="post"
                          action="{{ path('article_toggle', {id: article.id}) }}"
                          onsubmit="return confirm('Changer l\'√©tat de cet article ?');">
                        <button class="btn btn-sm btn-outline-warning">
                            {% if article.published %}D√©publier{% else %}Publier{% endif %}
                        </button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun article trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}" class="btn btn-success">‚ûï Cr√©er un nouvel article</a>
</div>
{% endblock %}
